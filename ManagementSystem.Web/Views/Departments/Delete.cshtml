@model DepartmentDto

@{
    ViewData["Title"] = "Remove Department";
}

<h1 class="page-header">Delete the Department on the System</h1>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<hr />
<div class="text-center">
    <dl class="row">

        <dt class="col-sm-2">Department Name: </dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DepartmentName)</dd>

        <dt class="col-sm-2">Office Name</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.DepartmentOfficeName)</dd>
        <hr />
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
    </dl>

    <form class="mt-5" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group text-center mt-5">

            @if (ViewBag.Error is null)
            {
                <input type="submit" value="Delete" class="btn btn-danger btn-shape" />
            }
            | <a class="btn btn-success btn-shape" asp-action="Index">Back to List</a>
        </div>

        @* Display the Error messsage below the buttons *@
        @if (ViewBag.Error is not null)
        {
            <div class="alert alert-danger text-center mt-3" role="alert">
                @ViewBag.Error
            </div>
        }
    </form>
</div>
