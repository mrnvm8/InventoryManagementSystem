@model DeviceDto

@{
    ViewData["Title"] = "Delete";
}


<h1 class="page-header">Delete the device on the System</h1>
<h3 class="text-center">Are you sure you want to delete this?</h3>
<hr />
<div class="text-center">

    <dl class="row">

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TypeName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TypeName)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.DeviceName)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.DeviceName)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.IdentityNumber)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.IdentityNumber)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.Condition)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Condition)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.PurchasedPrice)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.PurchasedPrice)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.PurchasedDate)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.PurchasedDate)</dd>

        <dt class = "col-sm-2">@Html.DisplayNameFor(model => model.DepartmentName)</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.DepartmentName)</dd>
    </dl>
    
    <form class="mt-3" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-shape" /> |
        <a class="btn btn-success btn-shape mx-2" asp-controller="Devices" asp-action="Index" asp-route-id="@Model.DepartId" asp-route-typeId="@Model.TypeId">
            Back To Devices
        </a>
    </form>
</div>
