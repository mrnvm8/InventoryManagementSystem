@model TicketDto

@{
    ViewData["Title"] = "Edit";
}

<h1 class="page-header">Acknowledge the Ticket</h1>
<div class="text-center">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TicketTitle)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TicketTitle)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DeviceName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DeviceName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DeviceType)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.DeviceType)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Department)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Department)</dd>
        <hr />
        <div>
            <h6>Ticket Issue</h6>
            <br/>
            @Model.TicketIssue
        </div>
        <br/>
        <hr />
    </dl>

</div>
<div class="page-content">
    <div class="form-content">
        <form class="form-detail text-center" asp-action="AcknowledgeTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row-total">
                <div class="form-row">
                    <label asp-for="ArangedDate" class="control-label"></label>
                    <input asp-for="ArangedDate" class="form-control input-text input-label" />
                    <span asp-validation-for="ArangedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TicketUpdate" class="control-label">Ticket Update</label>
                <textarea asp-for="TicketUpdate" rows="4" class="form-control"></textarea>
                <span asp-validation-for="TicketUpdate" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-5">
                @*If the person exist from the that database hide the Add button*@
                @if (ViewBag.Error is null)
                {
                    <input type="submit" value="Acknowledge" class="btn btn-primary btn-shape" />
                }
                | <a class="btn btn-success btn-shape" asp-action="Index">Back to List</a>
            </div>

            @* Display the Error messsage below the buttons *@
            @if (ViewBag.Error is not null)
            {
                <div class="alert alert-danger text-center" role="alert">
                    @ViewBag.Error
                </div>
            }
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
