@model TicketDto

@{
    ViewData["Title"] = "Ticket Details";
}

<h1 class="page-header">THIS IS THE TICKET INFORMATION</h1>
<div class="text-center">
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TicketTitle)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TicketTitle)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DeviceName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DeviceName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DeviceType)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.DeviceType)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Department)</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Department)</dd>
        <hr />
        <div class="mb-5">
            <h6 class="page-header">Ticket Issue</h6>
            @Model.TicketIssue!.ToUpper()
        </div>
        <hr />
    </dl>
</div>
@if(Model.Updated){
    <div class="alert alert-danger text-center" role="alert">
    <span style="color: green;">
        The Arranged Date for fixing the device:
        @DateTime.Parse(Model.ArangedDate.ToString()).ToString("yyyy-MM-dd")
        </span>
        <p class="mt-2">@Html.DisplayFor(model => model.TicketUpdate)</p>
    </div>
}else{
    <div class="alert alert-light text-center" role="alert">
        <p>Pending to be acknowleged by the Tech Team</p>
    </div>
}

<div class="text-center" style="margin-top: 20px;">
    <a class="btn btn-primary btn-shape" asp-action="Index">Back to List</a>
</div>
