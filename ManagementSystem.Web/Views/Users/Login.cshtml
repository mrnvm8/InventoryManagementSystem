@model UserLoginRequest
@{
    ViewData["Title"] = "Login Page";
}

<h1 style="margin-top: 4rem;" class="page-header">Device Management Login</h1>
<a class="btn btn-warning" asp-action="UserRegistration">Registration</a>

<div class="row mb-2">
    <div class="col-lg-3 col-md-2"></div>
    <div class="col-lg-6 col-md-8 login-box">
        <div class="col-lg-12 login-title datalicious-header">
            USER Login PANEL
        </div>

        <div class="col-lg-12 login-form">
            <form asp-action="Login">

                <div class="form-group">
                    <label asp-for="Email" class="form-control-label">USERNAME</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-control-label">PASSWORD</label>
                    <input id="InputPassword" type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="checkbox" onclick="VisiblePassword()" class="form-control-label">
                    <span class="check-password">Show Password</span>
                </div>

                <div class="col-lg-12">

                    <div class="col-lg-12 login-text">
                        <label class="text-danger">@ViewBag.AuthError</label>
                    </div>

                    <div class="col-lg-6 login-button">
                        <input type="submit" value="Login" class="btn btn-primary btn-shape" /> |
                        <a class="btn btn-success btn-shape" asp-action="Login">Clear</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}